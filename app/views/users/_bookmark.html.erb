<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.user.name %>
          bookmarked</h5>
        <p class="card-text"><%= bookmark.post.content %></p>
        <p class="card-text">
          <small class="text-muted">Bookmarked
            <%= time_ago_in_words(bookmark.created_at) %></small>
        </p>
      </div>
    </div>
  </div>
</div>