<div class="d-flex flex-column align-items mt-3">
  <div class="col-xl-7 col-lg-8 col-md-10 col-sm-11 post-card">
    <div class="card">
      <div class="card-header">
        Create A Post
      </div>
      <div class="card-body">
        <%= form_with model: @post, local: true, multipart: true, class: 'post-upload dropzone needsclick dz-clickable p-0 border-0' do |form| %>
        <div class="form-group row mt-2">
          <div class="col-md-2 pr-0">
            <%= gravatar_image_tag current_user.email, gravatar: { size: 100 }, alt: 'Profile Picture', class: 'img-thumbnail rounded-circle' %>
          </div>
          <div class="col-md-10 pl-1">
            <div class="form-group">
              <%= form.text_field :content, class: 'form-control border-0', placeholder: 'Whats on your mind?' %>
            </div>
            <div class="dz-message needsclick d-flex flex-column justify-content-center">
              Drop files here or click to upload.
              <%= fa_icon("plus", class: 'fa-2x') %>
            </div>
            <div id="submit-post-button" class="submission pt-1">
              <%= form.submit 'Post', class: 'btn btn-outline-primary btn-block' %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <div class="mt-4">
    <h3 class="text-center">All Posts</h3>
    <%= render @posts %>
  </div>

</div>
</div>