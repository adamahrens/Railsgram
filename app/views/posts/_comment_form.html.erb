<%= form_with(model: comment, url: [post, comment], remote: true, class: 'w-100') do |form| %>
<%= form.hidden_field :user_id, value: current_user.id %>
<%= form.hidden_field :post_id, value: post.id %>
<div class="form-group">
  <%= form.text_area :content, class: 'form-control comment-input border-0', placeholder: 'Add a comment', rows: 5 %>
</div>
<div class="form-group">
  <%= form.submit 'Send', class: 'btn btn-small btn-primary' %>
</div>
<% end %>