<div class="row">
  <div class="col-md-2 text-center">
    <div>
      <%= gravatar_image_tag resource.email, gravatar: { size: 100 }, alt: 'Profile Picture', class: 'rounded-circle' %>
    </div>
    <div class="mt-2">
      <h3>Unhappy?</h3>
      <p><%= button_to "Cancel my account", registration_path(resource_name), class: 'btn btn-outline-danger', data: { confirm: "Are you sure?" }, method: :delete %></p>
    </div>
  </div>
  <div class="col-md-10">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render 'shared/devise_error_messages' %>

    <div class="form-group">
      <%= f.label :email %><br/>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :name %><br/>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :website %><br/>
      <%= f.text_field :website, autocomplete: "website", class: 'form-control'%>
    </div>

    <div class="form-group">
      <%= f.label :biography %><br/>
      <%= f.text_area :biography, autocomplete: "biography", class: 'form-control', rows: '10' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for:
        <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.submit 'Update', class: 'btn btn-outline-primary' %>
    </div>
  <% end %>
</div>
</div>